//}

func printBool(bool x) {
	rawf:assign,x,HL,BC
	raw: ld A, (HL)
	raw: cp 0
	raw: jp Z, false*
	raw: ld A, $54
	raw: jp end*
	raw:false*: 
	raw: ld A, $46
	raw:end*:
	raw: call _PutC
}
